@model List<PacchettoViaggio>
@{
    ViewData["Title"] = "Pacchetti Viaggio";
    
}
<div class="container">

    <div class="text-center">
        <h1 class="display-4">Gestione PAcchetti</h1>
    </div>

    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nome</th>
                        <th>Data</th>
                        <th>Destinazioni</th>
                        <th>Prezzo</th>
                        <th>Azione</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count > 0)
                    {

                        @foreach (PacchettoViaggio viaggio in Model)
                        {
                            <tr>
                                <td>@viaggio.Id</td>
                                <td>@viaggio.Name</td>
                                <td>
                                    @foreach (Destination destination in viaggio.Destination)
                                    {
                                        <span>@destination </span>
                                    }
                                </td>
                                <td><img src="@viaggio.Image" /></td>
                                <td>@viaggio.Price €</td>
                                <td><a class="btn btn-warning" href="@Url.Action("Show", "Pizza",new { Id = viaggio.Id - 1 } )">Vedi</a></td>
                            </tr>
                        }


                    }
                    else
                    {
                        <tr>
                            <td></td>
                            <td>
                                <h2>No pizze presenti</h2>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>


</div>
